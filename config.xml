<?xml version='1.0' encoding='utf-8'?>
<widget id="com.annop.wikiread" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>WikiRead</name>
    <description>
        A application to help wikipedia reading
    </description>
    <author email="anoop26667@gmail.com" href="http://eventz.io">
        Anoop Kumar Chaurasia
    </author>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarOverlaysWebView" value="false" />
	<preference name="StatusBarBackgroundColor" value="#ffffff" />
	<preference name="StatusBarStyle" value="lightcontent" />
    <feature name="StatusBar">
        <param name="ios-package" value="CDVStatusBar" onload="true" />
    </feature>
    <preference name="android-minSdkVersion" value="14" />
    <preference name="permissions" value="none"/>
    <content src="index.html" />
    <access origin="*" />
    <platform name="ios">
        <splash src="res/ios/splash-320x480.png" width="320" height="480"/>
        <splash src="res/ios/splash-640x960.png" width="640" height="960"/>
        <splash src="res/ios/splash-768x1024.png" width="768" height="1024"/>
        <splash src="res/ios/splash-1536x2048.png" width="1536" height="2048"/>
        <splash src="res/ios/splash-1024x768.png" width="1024" height="768"/>
        <splash src="res/ios/splash-2048x1536.png" width="2048" height="1536"/>
        <splash src="res/ios/splash-640x1136.png" width="640" height="1136"/>
        <splash src="res/ios/splash-2208x1242.png" width="2208" height="1242"/>
        <splash src="res/ios/splash-1242*2208.png" width="1242" height="2208"/>
        <splash src="res/ios/splash-750x1334.png" width="750" height="1334"/>

        <icon src="res/ios/appicon.png" width="57" height="57" />
        <icon src="res/ios/appicon@2x.png" width="114" height="114" />
        <icon src="res/ios/appicon-small.png" width="29" height="29" />
        <icon src="res/ios/appicon-small@2x.png" width="58" height="58" />
        <icon src="res/ios/appicon-small@3x.png" width="87" height="87" />
        <icon src="res/ios/appicon-60.png" width="60" height="60" />
        <icon src="res/ios/appicon-60@2x.png" width="120" height="120" />
        <icon src="res/ios/appicon-60@3x.png" width="180" height="180" />
    </platform>
    <platform name="android">
        <icon src="res/logo.png"/>
    </platform>
    <allow-navigation href="*" />
    <preference name="Orientation" value="portrait" />
</widget>

